<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>appName</param-name>
        <param-value>Personnel Account Manager</param-value>
    </context-param>
    <context-param>
        <param-name>appShortName</param-name>
        <param-value>PAM</param-value>
    </context-param>
    <context-param>
        <param-name>appSpecificEnvPrefix</param-name>
        <param-value>PAM</param-value>
    </context-param>
    <context-param>
        <param-name>releaseNumber</param-name>
        <param-value>@VERSION@</param-value>
    </context-param>
    <context-param>
        <param-name>releaseDate</param-name>
        <param-value>@RELEASE_DATE@</param-value>
    </context-param>
    <filter>
        <filter-name>UrlRewriteFilter</filter-name>
        <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UrlRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <error-page>
        <error-code>403</error-code>
        <location>/not-authorized</location>
    </error-page>
    <error-page>
        <location>/error</location>
    </error-page>
    <session-config>
        <session-timeout>480</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    <welcome-file-list>
        <welcome-file>roles</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Enforce Authenticated on SSO Redirect Page</display-name>
        <web-resource-collection>
            <web-resource-name>SSO Page</web-resource-name>
            <description/>
            <url-pattern>/sso</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>**</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Enforce Admin on setup pages</display-name>
        <web-resource-collection>
            <web-resource-name>Setup Pages</web-resource-name>
            <url-pattern>/setup/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>pam-admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>OIDC</auth-method>
    </login-config>
    <security-role>
        <role-name>pam-admin</role-name>
    </security-role>
    <distributable/>
</web-app>
